@model IEnumerable<StarWars.Models.Starship>

@{
	ViewData["Title"] = "Naves";
	Layout = "~/Views/Shared/_NavLayout.cshtml";
}
<body>
	<h3 class="text-center">Naves Creadas</h3>
	<br />
	<form>
		<button asp-action="CreateOneStarship" class="boton-starship">Crear Nave</button>
		<button asp-action="Falcon" class="falcon"><img width="20" height="20" src="https://img.icons8.com/fluency-systems-filled/48/star-wars-millenium-falcon.png" alt="star-wars-millenium-falcon" /></button>
		<button asp-action="Index" class="rebellion"><img width="20" height="20" src="https://img.icons8.com/fluency-systems-regular/48/star-wars-rebellion-ship.png" alt="star-wars-rebellion-ship" /></button>
	</form>
	<br />
	<div class="container">
		<table class="table">
			<thead class="table-secondary">
				<tr>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.Model)</th>
					<th>@Html.DisplayNameFor(model => model.Longitude)</th>
					<th>@Html.DisplayNameFor(model => model.MaxPassengers)</th>
					<th>@Html.DisplayNameFor(model => model.Armament)</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var i in Model)
				{
					<tr>
						<td>@Html.DisplayFor(model => i.Name)</td>
						<td>@Html.DisplayFor(model => i.Model)</td>
						<td>@Html.DisplayFor(model => i.Longitude)</td>
						<td>@Html.DisplayFor(model => i.MaxPassengers)</td>
						<td>@Html.DisplayFor(model => i.Armament)</td>
						<td>
							<form asp-action="ViewDelete" method="post">
								<input type="submit" asp-action="ViewDelete" asp-route-name="@i.Name" value="Borrar Nave" class="boton-borrar-editar btn2" />
							</form>
						</td>
						<td>
							<form asp-action="Update" method="post">
								<input type="submit" asp-action="Update" asp-route-name="@i.Name" value="Editar Nave" class="boton-borrar-editar btn1" />
							</form>
						</td>
						
					</tr>
				}

			</tbody>
		</table>
	</div>
	<div class="container">
		<a asp-controller="Home" asp-action="Index">Volver al Inicio</a>
	</div>
</body>

